# Repair Service Application — скопируйте в .env и задайте значения

APP_NAME=RepairService
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_PORT=8080
APP_URL=http://localhost:8080
APP_TIMEZONE=UTC

LOG_CHANNEL=stack
LOG_LEVEL=debug

# БД (порт смещён — на 3306 уже может быть другое приложение)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=repair_service
DB_USERNAME=repair_service
DB_PASSWORD=secret

# Redis (порт в хосте смещён на 6380)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Кэш и сессии (file — без Redis; для production можно redis)
CACHE_STORE=file
CACHE_PREFIX=repair_service_
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_CONNECTION=sync

# Почта (при необходимости)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@repairservice.local"
MAIL_FROM_NAME="${APP_NAME}"

# Breeze / Sanctum (если будет API)
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# Внешние порты (для хоста): задайте при развёртывании рядом с React
# APP_PORT=8080   — веб (в docker-compose уже 8080)
# DB_PORT=3307    — MySQL с хоста
# REDIS_PORT=6380 — Redis с хоста
